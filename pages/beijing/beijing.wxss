/* pages/beijing/beijing.wxss */
page{
    background-color: white;
}
/*头部*/
.header{
    background-color: white;
    height: 160rpx;
}
.border-top{
    border-top: 2rpx solid #e2e2e2;
}
.border-left{
    border-left: 2rpx solid #e2e2e2;
}
.border-right{
    border-right: 2rpx solid #e2e2e2;
}
.border-bottom{
    border-bottom: 2rpx solid #e2e2e2;
}

/* 最新一期 */
.header-item-left {
    width: 426rpx;
    padding: 0rpx 30rpx 0rpx 30rpx;
}
.new {
    display: block;
    font-size: 32rpx;
    line-height: 32rpx;
    margin-top: 20rpx;
}
.inputBox {
    border: 2rpx solid #e2e2e2;
    height: 56rpx;
    width: 363rpx;
    border-radius: 8rpx;
    margin-top: 20rpx;
}

.inputBox-image{
    width: 16rpx;
    height: 32rpx;
    padding: 10rpx 14rpx 10rpx 14rpx;
}
.inputbox-input text{
    font-size: 30rpx; 
    line-height: 24rpx;
}
.inputbox-input image{
    width: 27rpx;
    height: 16rpx;
}


/*下一期*/
.header-item-right{
    width: 202rpx;
    padding: 0rpx 30rpx 0rpx 30rpx;
}
.redBox{
    background-color: red;
    color: white;
    font-size: 30rpx;
    line-height: 48rpx;
    border-radius: 8rpx;
    width: 48rpx;
    height: 48rpx;
    text-align: center;
}
.lineHeight24{
    display: block;
    font-size: 30rpx;
    line-height: 48rpx;
    margin-right: 10rpx;
    margin-left: 10rpx;
    color: #9b9b9b;
}
.margintop20{
    margin-top: 25rpx;
}

/*结果*/
.neck{
    height : 78rpx;
    background-color : white;
    padding: 20rpx 0rpx 20rpx 0rpx;
}
.width10px{
    width: 30rpx;
    height: 100%;
}
.neck-item-left {
    width: 483rpx;
    height: 100%;
    /*padding: 0rpx 30rpx 0px 30rpx;*/
}
.neck-item-right {
    width: 265rpx;
    height: 100%;
    padding-left: 30rpx;
}
.blueBox{
    display: block;
    width: 66rpx;
    height: 66rpx;
    background-color: #31adff;
    color: white;
    text-align: center;
    font-size: 36rpx;
    border-radius: 3px;
    line-height: 66rpx;
}
.operator{
    display: block;
    font-size: 36rpx;
}
.circle {
    width: 55rpx;
    height: 55rpx;
    border-radius: 27.5rpx;
    text-align: center;
    color: white;
    line-height: 55rpx;
    margin-top: 11.5rpx;
    margin-right: 20rpx;
}
.xiao{
    background-color: #738ffe;
}
.da{
    background-color: #ff9624;
}
.shi{
    background-color: red;
}
.hideenView{
    position: absolute;
    left: 0px;
    width: 100%;
    background-color: beige;
}

/*走势图*/
.trend {
    width: 100%;
    background-color: white;
}

/*聊天框*/
.chat{
    height: 126rpx;
    background: white;
    padding: 0rpx 30rpx 0rpx 30rpx;
}

.chat input{
    display: block;
    border: 2rpx #adadad solid;
    border-radius: 8rpx;
    height: 64rpx;
    width: 506rpx;
    margin-top: 30rpx;
    font-size: 30rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}   
.chat button {
    display: block;
    width: 110rpx;
    height: 64rpx;
    color: white;
    background-color: #a0aa7a;
    border: none;
    font-size: 30rpx;
    line-height: 66rpx;
    margin-left: 30rpx; 
    margin-top: 30rpx;
    padding: 1rpx;
}

/*消息界面*/

.tail{
    background-color: #f2f2f2;
    font-size: 28rpx;
    line-height: 32rpx;
    color: #adadad;
    
}
.message-cell {
    color: black;
    padding: 30rpx 30rpx 0rpx 30rpx;
}
.textBox{
    border-radius: 6rpx;
    padding: 18rpx;
}
.time{
    font-size: 22rpx;
    padding-top: 20rpx;
}

/*走势图*/
.trend-title{
    width: 50%;
    color: white;
    text-align: center;
    font-size: 30rpx;
    line-height: 50rpx;
}
.trend-end {
    height: 100rpx;
}
.trend-pic {
    height: 100rpx;
}
.width30 {
    width: 30%;
    text-align: center;
    font-size: 30rpx;
    line-height: 40rpx;
    color: rgb(113, 113, 113);
}
.width40 {
    width: 40%;
    text-align: center;
    font-size: 30rpx;
    color: rgb(113, 113, 113);
    line-height: 40rpx;
}
.width20 {
    width: 20%;
}
.width14 {
    width: 14%;
}
.textcenter{
    text-align:center;
    color: rgb(113, 113, 113);
    font-size : 30rpx;
    line-height: 40rpx;
    padding : 5rpx 0rpx 5rpx 0rpx;
    height: 40rpx;
}

.trend-header{
    background-color: rgb(245, 245, 245);
}
.bg_blue{
    background-color : rgb(0,200,251);
}
.bg_red{
    background-color : red;
}

.block{
    color : white;
    width : 40rpx;
    height : 40rpx;
    border-radius : 20rpx;
}



